

@{
    ViewBag.Title = "Login";
    string error = ViewBag.error;

}



<div class="main_cnt">

    <h1>Welcome to ....</h1>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form_log" }))
    {



        <h2>Enter your user and password</h2>

        <div class="items-log_cnt">
            <label>Domain</label>

            <select name="domain" class="drop_login" required>
                <option value="">.:: Select ::.</option>
                <option value="APC">APC</option>
                <option value="EMEA">EMEA</option>
                <option value="LAT">LAT</option>
                <option value="NAC">NAC</option>
                <option value="AMER">L-SYKES AMER</option>
                <option value="APAC">L-SYKES APAC</option>
                <option value="BLUE_EMEA">L-SYKES EMEA</option>
            </select>
        </div>

        <div class="items-log_cnt">
            <label for="userN">NT Login</label>
            <input type="text" id="userN" name="userN" required>
        </div>

        <div class="items-log_cnt">
            <label>Password</label>
            <input type="password" id="userP" name="userP" required>
        </div>


        <button type="submit" class="btn-general hvr-icon-back" value="Login"><i class="fa-solid fa-right-to-bracket fa-sm hvr-icon" style="color:var(--fe_navy)" ></i>log in</button>



        if (error != null)
        {
            <span style="color:red;">@error</span>
        }

    }


</div>


