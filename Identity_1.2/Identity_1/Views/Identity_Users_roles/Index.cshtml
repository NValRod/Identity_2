@model IEnumerable<Identity_1.Models.Identity_Users_roles>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div style="margin-left:5em; margin-top:3em;">
    <h2 style="font-weight:700;">Users</h2>
    @*<button class="btn-general btn-add" id="btn-modal"><i class="fa-solid fa-plus fa-sm"></i>Add new user</button>*@
    <a id="btn-modal" class="btn-general btn-add hvr-icon-drop"><i class="fa-solid fa-user-plus fa-sm hvr-icon"></i>Add new user</a>
</div>


<div style="display:flex; justify-content:center;">

    <table class="table table-bordered table-hover table-sm" style="text-align:center; width:90%">
        <tr class="table-user-roles">
            <th>User Name</th>
            <th>User Email</th>

            <th>NT Login</th>
            <th>Role</th>
            <th style="width:28em;">Actions</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.userName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.userEmail)
                </td>

                <td style="display:none">
                    @Html.Raw(item.userStatus == true ? "Active" : "Deleted")
                    @Html.DisplayFor(modelItem => item.userStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.userRed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.role_identity_nv.descript)
                </td>
                <td style="display:flex; gap:1em; justify-content:center;">
                    <a class="btn-general btn-edit edit-btn hvr-icon-pop" data-user-id="@item.userId"><i class="fa-solid fa-pen-to-square fa-sm hvr-icon"></i>Edit</a>
                    <a class="btn-general btn-delete delete-btn hvr-icon-buzz-out" data-user-id="@item.userId"><i class="fa-solid fa-trash fa-sm hvr-icon"></i>Delete</a>
                </td>
            </tr>
        }

    </table>

</div>


