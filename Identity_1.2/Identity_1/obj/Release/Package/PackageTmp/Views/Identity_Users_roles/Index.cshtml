@model IEnumerable<Identity_1.Models.Identity_Users_roles>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div style="margin-left:5em; margin-top:3em;">
    <h2 style="font-weight:700;">Users</h2>
    <button class="btn-general btn-add">
        @Html.ActionLink("Add new user", "Create")
    </button>
</div>


<div style="display:flex; justify-content:center;">

    <table class="table table-bordered table-hover table-sm" style="text-align:center; width:90%">
        <tr class="table-user-roles">
            <th>User Name</th>
            <th>User Email</th>
            <th>Status</th>
            <th>Red Name</th>
            <th>Role</th>
            <th style="width:28em;">Actions</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.userName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.userEmail)
                </td>

                <td>
                    @Html.Raw(item.userStatus == true ? "Active" : "Deleted")
                    @*@Html.DisplayFor(modelItem => item.userStatus)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.userRed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.role_identity_nv.descript)
                </td>
                <td style="display:flex; gap:1em; justify-content:center;">
                    <button class="btn-general btn-edit"> <i class="fa-solid fa-pen-to-square fa-sm" style="color: #fcfcfc;"></i>@Html.ActionLink("Edit", "Edit", new { id = item.userId }) </button>
                    <button class="btn-general btn-delete"><i class="fa-solid fa-trash fa-sm" style="color: #fcfcfc;"></i>@Html.ActionLink("Delete", "Delete", new { id = item.userId })</button>
                </td>
            </tr>
        }

    </table>


</div>
